<!--
    this is the first activity a user sees after connecting wifi-direct
    it contains two buttons and a textview
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Light"
    android:label="MainMemu"
    tools:context="com.example.photosharing.MenuActivity">

    <Button
        android:id="@+id/btnGetPhotos"
        android:layout_width="234dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/abc_text_size_display_4_material"/>
    <Button
        android:id="@+id/btnSharePhotos"
        android:layout_width="234dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/abc_text_size_display_3_material"/>

    <Button
        android:id="@+id/btnFindDevices"
        android:layout_width="156dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/abc_text_size_display_4_material"
        android:background="@drawable/btnfinddevices"/>

</LinearLayout>
